{
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:promise/recommended",
    "plugin:node/recommended",
    "airbnb-base",
    "prettier"
  ],
  "plugins": ["promise", "node", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },

  "rules": {
    "prettier/prettier": ["warn"],
    "consistent-return": "warn",
    "no-unused-vars": "warn"
  }
}
